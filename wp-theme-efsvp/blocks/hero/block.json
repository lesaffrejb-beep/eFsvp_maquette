{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "efsvp/hero",
  "title": "Hero Section",
  "category": "efsvp-blocks",
  "icon": "cover-image",
  "description": "Section hero premium avec image/vidéo de fond, titre, sous-titre et CTA",
  "keywords": ["hero", "banner", "header", "efsvp"],
  "version": "1.0.0",
  "textdomain": "efsvp",
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Vous avez déjà écrit l'histoire."
    },
    "subtitle": {
      "type": "string",
      "default": "Nous la mettons en scène avec mesure."
    },
    "description": {
      "type": "string",
      "default": "Une direction narrative et musicale ciselée qui laisse respirer vos moments clés et magnifie votre signature."
    },
    "backgroundImage": {
      "type": "object",
      "default": null
    },
    "backgroundVideo": {
      "type": "object",
      "default": null
    },
    "posterImage": {
      "type": "object",
      "default": null
    },
    "ctaText": {
      "type": "string",
      "default": "Partagez votre histoire"
    },
    "ctaUrl": {
      "type": "string",
      "default": "#contact"
    },
    "enableOverlay": {
      "type": "boolean",
      "default": true
    },
    "overlayColor": {
      "type": "string",
      "default": "#0f141a"
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.5
    },
    "minHeight": {
      "type": "string",
      "default": "80vh"
    },
    "showMetrics": {
      "type": "boolean",
      "default": true
    },
    "metrics": {
      "type": "array",
      "default": [
        {
          "value": "60+",
          "label": "Représentations"
        },
        {
          "value": "15+",
          "label": "Projets institutionnels"
        },
        {
          "value": "1200€",
          "label": "À partir de"
        }
      ]
    }
  },
  "editorScript": "file:./editor.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}
