{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "efsvp/portfolio-grid",
  "title": "Portfolio Grid avec filtres",
  "category": "efsvp-blocks",
  "icon": "filter",
  "description": "Grille de projets avec filtres dynamiques et slot de cartes",
  "keywords": ["portfolio", "filters", "grid", "efsvp"],
  "version": "1.0.0",
  "textdomain": "efsvp",
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "html": false
  },
  "attributes": {
    "sectionTitle": {
      "type": "string",
      "default": "Notre portfolio"
    },
    "sectionSubtitle": {
      "type": "string",
      "default": "Filtrez nos projets par univers"
    },
    "filters": {
      "type": "array",
      "default": [
        {
          "label": "Tous",
          "value": "*",
          "isDefault": true
        },
        {
          "label": "Spectacle vivant",
          "value": "spectacle",
          "isDefault": false
        },
        {
          "label": "Narration",
          "value": "narration",
          "isDefault": false
        },
        {
          "label": "Performance",
          "value": "performance",
          "isDefault": false
        }
      ]
    },
    "columns": {
      "type": "number",
      "default": 3
    }
  },
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "usesContext": ["postId"]
}
