{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "efsvp/testimonials",
  "title": "Testimonials",
  "category": "efsvp-blocks",
  "icon": "format-quote",
  "description": "Section témoignages avec citations et photos",
  "keywords": ["testimonials", "quotes", "reviews", "efsvp"],
  "version": "1.0.0",
  "textdomain": "efsvp",
  "supports": {
    "align": ["wide", "full"],
    "anchor": true
  },
  "attributes": {
    "sectionTitle": {
      "type": "string",
      "default": "Ils nous font confiance"
    },
    "sectionSubtitle": {
      "type": "string",
      "default": "Témoignages de nos clients"
    },
    "testimonials": {
      "type": "array",
      "default": []
    },
    "postsPerPage": {
      "type": "number",
      "default": 6
    },
    "darkBackground": {
      "type": "boolean",
      "default": true
    }
  },
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}
