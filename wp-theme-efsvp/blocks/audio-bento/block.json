{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "efsvp/audio-bento",
  "title": "Audio Bento",
  "category": "efsvp-blocks",
  "icon": "format-audio",
  "description": "Section audio modulaire avec playlists à badges et métadonnées.",
  "keywords": ["audio", "playlist", "waveform", "efsvp"],
  "version": "1.0.0",
  "textdomain": "efsvp",
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "sectionTitle": {
      "type": "string",
      "default": "Écoutez ce que nous créons"
    },
    "sectionSubtitle": {
      "type": "string",
      "default": "Des récits qui touchent, portés par la musique"
    },
    "playlists": {
      "type": "array",
      "default": [
        {
          "layout": "featured",
          "badge": "Hymne officiel",
          "title": "La force de la douceur",
          "client": "Département Maine-et-Loire · 2024",
          "audioUrl": "",
          "duration": "3:45",
          "metadata": "Extrait orchestral"
        },
        {
          "layout": "standard",
          "badge": "Série promotionnelle",
          "title": "SIVAL — Série promotionnelle",
          "client": "SIVAL · 2025",
          "audioUrl": "",
          "duration": "2:15",
          "metadata": "Format podcast"
        },
        {
          "layout": "list",
          "badge": "Création immersive",
          "title": "Atelier Lacour",
          "client": "Métaphore forêt · 2024",
          "audioUrl": "",
          "duration": "1:20",
          "metadata": "Live acoustique"
        }
      ]
    }
  },
  "editorScript": "file:./edit.js",
  "style": "file:./style.css",
  "render": "file:./render.php"
}
