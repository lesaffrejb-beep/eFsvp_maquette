{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "efsvp/process",
  "title": "Process Timeline",
  "category": "efsvp-blocks",
  "icon": "list-view",
  "description": "Timeline élégante présentant le processus de travail en 4 étapes",
  "keywords": ["process", "timeline", "étapes", "workflow", "efsvp"],
  "version": "1.0.0",
  "textdomain": "efsvp",
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Comment ça marche"
    },
    "subtitle": {
      "type": "string",
      "default": "Un process simple et rassurant en 4 étapes"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#faf9f8"
    },
    "showCTA": {
      "type": "boolean",
      "default": true
    },
    "ctaText": {
      "type": "string",
      "default": "Démarrer votre projet"
    },
    "ctaUrl": {
      "type": "string",
      "default": "#contact"
    }
  },
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}
