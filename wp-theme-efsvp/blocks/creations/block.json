{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "efsvp/creations",
  "title": "Créations Audio",
  "category": "efsvp-blocks",
  "icon": "format-audio",
  "description": "Section de présentation des créations audio avec lecteurs, grille Bento et cards",
  "keywords": ["audio", "créations", "player", "bento", "efsvp"],
  "version": "1.0.0",
  "textdomain": "efsvp",
  "supports": {
    "align": ["wide", "full"],
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Écoutez ce que nous créons"
    },
    "subtitle": {
      "type": "string",
      "default": "Des récits qui touchent, portés par la musique"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#faf9f8"
    },
    "showCTA": {
      "type": "boolean",
      "default": true
    },
    "ctaText": {
      "type": "string",
      "default": "Découvrir tous nos projets"
    },
    "ctaUrl": {
      "type": "string",
      "default": "#portfolio"
    }
  },
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}
