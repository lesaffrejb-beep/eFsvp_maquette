{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "slug": "primary", "name": "Terracotta", "color": "#b95a40" },
        { "slug": "primary-hover", "name": "Terracotta Hover", "color": "#d16d52" },
        { "slug": "primary-active", "name": "Terracotta Active", "color": "#a04a32" },
        { "slug": "secondary", "name": "Kaki Doux", "color": "#8a8a68" },
        { "slug": "accent-camel", "name": "Camel", "color": "#c39d6b" },
        { "slug": "accent-beige", "name": "Beige", "color": "#e6d9c3" },
        { "slug": "ink", "name": "Encre", "color": "#1d2c3b" },
        { "slug": "charcoal", "name": "Charcoal", "color": "#2d3748" },
        { "slug": "parchment", "name": "Parchemin", "color": "#fbf8f3" },
        { "slug": "sand", "name": "Sable Clair", "color": "#faf6f0" },
        { "slug": "sand-deep", "name": "Sable Profond", "color": "#f0e9dc" },
        { "slug": "accent-gold", "name": "Or Chaud", "color": "#f3b47a" },
        { "slug": "surface-elevated", "name": "Surface Élevée", "color": "#ffffff" },
        { "slug": "text-secondary", "name": "Texte Secondaire", "color": "#4a5568" },
        { "slug": "text-tertiary", "name": "Texte Tertiaire", "color": "#6b7280" }
      ]
    },
    "layout": {
      "contentSize": "68rem",
      "wideSize": "1280px"
    },
    "spacing": {
      "spacingSizes": [
        { "slug": "space-1", "size": "0.25rem", "name": "Space 1 (4px)" },
        { "slug": "space-2", "size": "0.5rem", "name": "Space 2 (8px)" },
        { "slug": "space-3", "size": "0.75rem", "name": "Space 3 (12px)" },
        { "slug": "space-4", "size": "1rem", "name": "Space 4 (16px)" },
        { "slug": "space-5", "size": "1.25rem", "name": "Space 5 (20px)" },
        { "slug": "space-6", "size": "1.5rem", "name": "Space 6 (24px)" },
        { "slug": "space-8", "size": "2rem", "name": "Space 8 (32px)" },
        { "slug": "space-10", "size": "2.5rem", "name": "Space 10 (40px)" },
        { "slug": "space-12", "size": "3rem", "name": "Space 12 (48px)" },
        { "slug": "space-16", "size": "4rem", "name": "Space 16 (64px)" },
        { "slug": "space-20", "size": "5rem", "name": "Space 20 (80px)" },
        { "slug": "space-24", "size": "6rem", "name": "Space 24 (96px)" },
        { "slug": "space-28", "size": "7rem", "name": "Space 28 (112px)" },
        { "slug": "space-32", "size": "8rem", "name": "Space 32 (128px)" }
      ],
      "units": ["px", "rem", "em", "%", "vw", "vh"]
    },
    "typography": {
      "fluid": true,
      "dropCap": false,
      "fontFamilies": [
        {
          "slug": "playfair-display",
          "name": "Playfair Display",
          "fontFamily": "\"Playfair Display\", serif"
        },
        {
          "slug": "inter",
          "name": "Inter",
          "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif"
        },
        {
          "slug": "cormorant",
          "name": "Cormorant",
          "fontFamily": "\"Cormorant\", serif"
        }
      ],
      "fontSizes": [
        { "slug": "xs", "size": "clamp(0.75rem, 0.7rem + 0.2vw, 0.875rem)", "name": "XS" },
        { "slug": "sm", "size": "clamp(0.875rem, 0.8rem + 0.25vw, 0.938rem)", "name": "Small" },
        { "slug": "base", "size": "clamp(1.063rem, 0.95rem + 0.4vw, 1.188rem)", "name": "Base" },
        { "slug": "lg", "size": "clamp(1.125rem, 1rem + 0.45vw, 1.375rem)", "name": "Large" },
        { "slug": "xl", "size": "clamp(1.25rem, 1.1rem + 0.6vw, 1.75rem)", "name": "XL" },
        { "slug": "xxl", "size": "clamp(1.5rem, 1.3rem + 0.8vw, 2.25rem)", "name": "XXL" },
        { "slug": "display", "size": "clamp(2.25rem, 1.85rem + 1.2vw, 3.5rem)", "name": "Display" },
        { "slug": "hero", "size": "clamp(3rem, 2.4rem + 2vw, 4.5rem)", "name": "Hero" }
      ],
      "lineHeight": true
    }
  },
  "styles": {
    "color": {
      "background": "#fbf8f3",
      "text": "#1d2c3b"
    },
    "spacing": {
      "padding": {
        "top": "var(--wp--preset--spacing--space-6)",
        "right": "var(--wp--preset--spacing--space-6)",
        "bottom": "var(--wp--preset--spacing--space-6)",
        "left": "var(--wp--preset--spacing--space-6)"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.7"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair-display)",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "var(--wp--preset--color--ink)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    }
  }
}
