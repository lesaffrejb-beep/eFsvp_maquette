# Security Headers for Vercel Deployment
# https://vercel.com/docs/edge-network/headers

/*
  # HSTS - Force HTTPS for 2 years
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

  # Prevent clickjacking
  X-Frame-Options: SAMEORIGIN

  # XSS Protection (legacy browsers)
  X-Content-Type-Options: nosniff

  # Referrer Policy - Privacy-friendly
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions Policy - Restrict browser features
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=()

  # Content Security Policy - Comprehensive protection
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; media-src 'self' blob: https:; connect-src 'self' https:; frame-ancestors 'self'

  # Prevent MIME type sniffing
  X-XSS-Protection: 1; mode=block

  # Cache Control for static assets
  Cache-Control: public, max-age=31536000, immutable

# Separate cache policy for HTML
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Service Worker cache (if implemented later)
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# API routes (if any)
/api/*
  Cache-Control: no-store, no-cache, must-revalidate
